<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:background="@drawable/white_round_top_border_20">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_upload_bottom_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_bottom_close_13"
            app:layout_constraintTop_toTopOf="@+id/tv_upload_bottom_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_upload_bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/upload_bottom_title"
            android:textAppearance="@style/SemiBoldFont.14"
            android:textColor="#555555"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_upload_bottom_gallery_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_solid_white_radius_10"
            android:backgroundTint="#F0F0F0"
            app:layout_constraintTop_toBottomOf="@+id/tv_upload_bottom_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.44"
            app:layout_constraintHeight_percent="0.7"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_upload_bottom_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_upload_gallery_33"
            app:layout_constraintTop_toTopOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintBottom_toBottomOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintStart_toStartOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintEnd_toEndOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.4"/>
        <TextView
            android:id="@+id/tv_upload_bottom_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_bottom_gallery"
            app:layout_constraintTop_toTopOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintBottom_toBottomOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintStart_toStartOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintEnd_toEndOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.5"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_upload_bottom_drive_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_solid_white_radius_10"
            android:backgroundTint="#F0F0F0"
            app:layout_constraintTop_toBottomOf="@+id/tv_upload_bottom_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_upload_bottom_gallery_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.44"
            app:layout_constraintHeight_percent="0.7"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_upload_bottom_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_upload_drive_38"
            app:layout_constraintTop_toTopOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintBottom_toBottomOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintStart_toStartOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintEnd_toEndOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.4"/>
        <TextView
            android:id="@+id/tv_upload_bottom_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_bottom_drive"
            app:layout_constraintTop_toTopOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintBottom_toBottomOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintStart_toStartOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintEnd_toEndOf="@+id/iv_upload_bottom_drive_box"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>