<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF">

    <View
        android:id="@+id/date_bottom_sheet"
        android:layout_width="360dp"
        android:layout_height="323dp"
        android:background="@drawable/white_round_top_border_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="192dp"
        android:layout_height="22dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="16dp"
        android:text="졸업 예정일"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/date_bottom_sheet"
        app:layout_constraintTop_toTopOf="@+id/date_bottom_sheet" />

    <View
        android:id="@+id/view_underline"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginTop="53dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="@+id/date_bottom_sheet"
        app:layout_constraintTop_toTopOf="@+id/date_bottom_sheet" />

    <NumberPicker
        android:id="@+id/yearpicker_datepicker"
        android:layout_width="344dp"
        android:layout_height="260dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:selectionDividerHeight="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_highlight"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginTop="144dp"
        android:background="#60F0F0F0"
        app:layout_constraintStart_toStartOf="@+id/date_bottom_sheet"
        app:layout_constraintTop_toTopOf="@+id/date_bottom_sheet" />
</androidx.constraintlayout.widget.ConstraintLayout>