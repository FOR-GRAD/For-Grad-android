<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_career_volunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="59dp"
                    android:src="@drawable/ic_career_volunteer_26"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_career_volunteer_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/ic_back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_career_volunteer" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_career_volunteer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/career_volunteer_title"
                    android:textAppearance="@style/SemiBoldFont.24"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_career_volunteer" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_main"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_solid_white_radius_16_5">

                <TextView
                    android:id="@+id/tv_career_edit_volunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/career_volunteer_name"
                    android:textAppearance="@style/SemiBoldFont.16"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_career_edit_volunteer"
                    style="@style/MediumFont.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/bg_solid_gray_radius_15"
                    android:gravity="top"
                    android:hint="@string/career_volunteer_name_ex"
                    android:paddingStart="18dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="10dp"
                    android:text="@={vm.title}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_volunteer" />

                <TextView
                    android:id="@+id/tv_career_edit_volunteer_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="23dp"
                    android:text="@string/career_volunteer_hour"
                    android:textAppearance="@style/SemiBoldFont.16"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_career_edit_volunteer" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_career_edit_volunteer_hour"
                    style="@style/MediumFont.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/bg_solid_gray_radius_15"
                    android:gravity="top"
                    android:hint="숫자만 기입해주세요"
                    android:paddingStart="18dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="10dp"
                    android:text="@={vm.hour}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_volunteer_hour" />

                <TextView
                    android:id="@+id/tv_career_edit_volunteer_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="23dp"
                    android:text="@string/career_startDate"
                    android:textAppearance="@style/SemiBoldFont.16"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_career_edit_volunteer_hour" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_career_edit_volunteer_start_year"
                    style="@style/MediumFont.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/bg_solid_gray_radius_15"
                    android:focusable="false"
                    android:gravity="top"
                    android:hint="@string/career_date_ex"
                    android:paddingStart="18dp"
                    android:paddingTop="11dp"
                    android:paddingBottom="10dp"
                    android:text="@={vm.startDate}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_volunteer_startDate" />

                <TextView
                    android:id="@+id/tv_career_edit_volunteer_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="23dp"
                    android:text="@string/career_endDate"
                    android:textAppearance="@style/SemiBoldFont.16"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_career_edit_volunteer_start_year" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_career_edit_volunteer_end_year"
                    style="@style/MediumFont.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/bg_solid_gray_radius_15"
                    android:focusable="false"
                    android:gravity="top"
                    android:hint="@string/career_date_ex"
                    android:paddingStart="18dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@={vm.endDate}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_volunteer_endDate" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_career_edit"
                    style="@style/SemiBoldFont.16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_solid_dark_gray_radius_23_5"
                    android:backgroundTint="@{vm.isFilledAllOptions ? @color/skyBlue : @color/gray}"
                    android:enabled="@{vm.isFilledAllOptions}"
                    android:stateListAnimator="@null"
                    android:text="@string/career_edit_btn"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_career_edit_volunteer_end_year" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>