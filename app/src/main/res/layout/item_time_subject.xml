<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/time_item_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="과목명"
        android:textSize="16sp"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/time_item_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="학년"
        android:layout_marginRight="100dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/time_item_subject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/time_item_score"
        android:layout_width="310dp"
        android:layout_height="27dp"
        android:layout_marginRight="100dp"
        android:text="이수구분/ 학점"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_item_semester" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plan_time_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/time_rounded_corners"
        android:text="추가하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_item_score"
        app:layout_constraintTop_toTopOf="@id/time_item_score" />




</androidx.constraintlayout.widget.ConstraintLayout>
