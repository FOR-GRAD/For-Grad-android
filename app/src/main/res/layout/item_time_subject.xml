<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#F2F2F2">

    <TextView
        android:id="@+id/time_item_subject"
        style="@style/MediumFont.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:background="#F2F2F2"
        android:text="과목명"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_item_semester"
        style="@style/MediumFont.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#F2F2F2"
        android:text="학년"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/time_item_subject"
        app:layout_constraintTop_toBottomOf="@id/time_item_subject" />

    <TextView
        android:id="@+id/time_item_score"
        style="@style/MediumFont.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="#F2F2F2"
        android:layout_marginBottom="12dp"
        android:text="이수구분/ 학점"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/time_item_semester"
        app:layout_constraintTop_toBottomOf="@id/time_item_semester" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/plan_time_add_button"
        style="@style/MediumFont.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:background="@drawable/item_radius_plan"
        android:gravity="center"
        android:text="추가하기"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/time_item_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/time_item_score" />


</androidx.constraintlayout.widget.ConstraintLayout>
