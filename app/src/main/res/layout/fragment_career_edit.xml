<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.career.CareerEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_career_plus_18"
                app:layout_constraintTop_toTopOf="@+id/tv_career_edit_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_career_edit_title"
                app:layout_constraintEnd_toStartOf="@+id/tv_career_edit_title"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/tv_career_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="137dp"
                android:layout_marginEnd="136dp"
                android:text="커리어 더하기"
                android:textAppearance="@style/SemiBoldFont.24"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="17dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/bg_solid_white_radius_16_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_top">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_spinner"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_career_edit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textColor="#757575"
                app:layout_constraintTop_toTopOf="@+id/iv_career_edit_spinner"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_spinner"
                app:layout_constraintEnd_toEndOf="@+id/iv_career_edit_spinner"
                app:layout_constraintBottom_toBottomOf="@+id/iv_career_edit_spinner"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5"/>

            <TextView
                android:id="@+id/tv_career_edit_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="6dp"
                android:text="활동"
                android:textAppearance="@style/SemiBoldFont.16"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/iv_career_edit_spinner"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_spinner"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_activity"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_activity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_career_edit_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginStart="6dp"
                android:text="첨부파일"
                android:textAppearance="@style/SemiBoldFont.16"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/iv_career_edit_activity"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_activity"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_file"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_file"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_career_upload"
                app:layout_constraintTop_toTopOf="@+id/iv_career_edit_file"
                app:layout_constraintBottom_toBottomOf="@+id/iv_career_edit_file"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_file"
                app:layout_constraintEnd_toEndOf="@+id/iv_career_edit_file"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/tv_career_edit_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginStart="6dp"
                android:text="수상명"
                android:textAppearance="@style/SemiBoldFont.16"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/iv_career_edit_file"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_file"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_award"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_award"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_career_edit_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginStart="6dp"
                android:text="기간"
                android:textAppearance="@style/SemiBoldFont.16"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/iv_career_edit_award"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_award"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_year"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_period"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_career_edit_month"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.27"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_month"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_period"
                app:layout_constraintStart_toEndOf="@+id/iv_career_edit_year"
                app:layout_constraintEnd_toStartOf="@+id/iv_career_edit_day"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.27"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_day"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/bg_solid_gray_radius_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_career_edit_period"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.27"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_career_edit_add_btn"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="38dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/bg_solid_dark_gray_radius_23_5"
                app:layout_constraintTop_toBottomOf="@+id/iv_career_edit_year"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_career_edit_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가하기"
                android:textAppearance="@style/SemiBoldFont.16"
                android:textColor="#D9D9D9"
                app:layout_constraintTop_toTopOf="@+id/iv_career_edit_add_btn"
                app:layout_constraintBottom_toBottomOf="@+id/iv_career_edit_add_btn"
                app:layout_constraintStart_toStartOf="@+id/iv_career_edit_add_btn"
                app:layout_constraintEnd_toEndOf="@+id/iv_career_edit_add_btn"
                app:layout_constraintVertical_bias="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>