        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke android:width="1dp" android:color="#00000000"/> <!-- 투명 색상 -->
            <padding android:top="1dp"/>
        </shape>
    </item>
    <!-- 하단 선 (투명) -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke android:width="1dp" android:color="#00000000"/> <!-- 투명 색상 -->
            <padding android:bottom="1dp"/>
        </shape>
    </item>
    <!-- 좌측 선 (하얀색) -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke android:width="1dp" android:color="#FFFFFF"/> <!-- 하얀 색상 -->
            <padding android:left="1dp"/>
        </shape>
    </item>
    <!-- 우측 선 (하얀색) -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke android:width="1dp" android:color="#FFFFFF"/> <!-- 하얀 색상 -->
            <padding android:right="1dp"/>
        </shape>
    </item>
